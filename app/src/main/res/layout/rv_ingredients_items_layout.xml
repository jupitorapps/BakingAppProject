<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_ingredients_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ingredients_demo_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textStyle="italic"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ingredients_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ingredients_demo_quantity" />

        <TextView
            android:id="@+id/tv_ingredients_measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/ingredients_demo_measure" />

    </LinearLayout>


</LinearLayout>