<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/colorPrimary"
    android:weightSum="7">

    <TextView
        android:id="@+id/widget_list_view_ingredients_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        android:layout_marginEnd="4dp"
        android:text="@string/ingredients_demo_text" />

    <TextView
        android:id="@+id/widget_list_view_ingredients_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginEnd="4dp"
        android:text="@string/ingredients_demo_quantity" />

    <TextView
        android:id="@+id/widget_list_view_ingredients_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginEnd="4dp"
        android:text="@string/ingredients_demo_measure" />
</LinearLayout>